<h2 class="text-center mb-4">Statistics</h2>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: statistics_products_path, method: :get, data: { turbo_stream: true } do |form| %>
        <div class="input-group mb-3">
          <%= form.text_field :info, class: "form-control", placeholder: "Info", aria_label: "Info", required: true %>
        </div>
        <div class="input-group mb-3">
          <%= form.date_field :start_date, class: "form-control", required: true %>
          <%= form.date_field :end_date, class: "form-control", required: true %>
        </div>
        <%= form.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div id="statistics_table">
    </div>
    <%= turbo_frame_tag 'table_pagination' %>
  </div>
</div>
