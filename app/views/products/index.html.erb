<div class="container mt-5">
  <h2 class="text-center mb-4">Scrap products</h2>
  <%= form_with url: products_path, method: :post, class: 'form-inline justify-content-center' do |form| %>
    <div class="form-group">
      <%= form.text_area :urls, class: 'form-control', rows: 5, placeholder: 'URLs)', required: true, value: @urls %>
    </div>
    <%= form.submit 'Scrap', class: 'btn btn-primary ml-2 mt-3' %>
  <% end %>
</div>
